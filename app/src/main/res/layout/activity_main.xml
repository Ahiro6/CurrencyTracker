<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353131"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fromText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="#BAAEAE"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/switchBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BF4444"
                app:srcCompat="@android:drawable/ic_popup_sync"
                />

            <TextView
                android:id="@+id/toText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="#BAAEAE"
                android:textSize="24sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/fromSpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D16262">


            </Spinner>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/toSpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D16262" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/fromView"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#BAA6A6"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="#A39B9B" />

            <ImageButton
                android:id="@+id/convertBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#BF4444"
                app:srcCompat="@android:drawable/ic_menu_send" />

            <EditText
                android:id="@+id/toView"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#A69595"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="#B1A3A3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/amountView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="0.00"
                android:textAlignment="center"
                android:textColor="#B6A6A6"
                android:textSize="24sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/amountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="#BAAEAE"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/amountEditor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#B6A2A2"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="#B19C9C" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>